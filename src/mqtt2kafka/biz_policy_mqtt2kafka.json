{
    "label": "biz-policy-mqtt2kafka-$ARCH",
    "description": "A mqtt2kafka Business Policy",
    "service": {
	"name": "$EDGE_OWNER.$EDGE_DEPLOY.mqtt2kafka",
	"org": "$HZN_ORG_ID",
	"arch": "$ARCH",
	"serviceVersions": [
	    {
		"version": "1.0.2",
		"priority":{}
	    }
	]
    },
    "properties": [
    ],
    "constraints": [
	"owner == $EDGE_OWNER",
	"deploy == $EDGE_DEPLOY",
	"kafka == 1.0.2"
    ],
    "userInput": [
	{
	    "serviceOrgid": "$HZN_ORG_ID",
	    "serviceUrl": "$EDGE_OWNER.$EDGE_DEPLOY.mqtt2kafka",
	    "serviceVersionRange": "[0.0.0,INFINITY)",
	    "inputs": [
		{ "name" : "EVTSTREAMS_BROKER_URL", "value" : "$EVTSTREAMS_BROKER_URL" },
		{ "name" : "EVTSTREAMS_API_KEY",    "value" : "$EVTSTREAMS_API_KEY" },
		{ "name" : "EVTSTREAMS_TOPIC",      "value" : "$EVTSTREAMS_TOPIC" },
		{ "name" : "MQTT_TOPIC",            "value" : "/detect" }
	    ]
	}
    ]
}
